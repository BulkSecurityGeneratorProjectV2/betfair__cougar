<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="httpExecutionContextResolverFactory"
          class="com.betfair.cougar.transport.impl.protocol.http.ZipkinExecutionContextResolverFactory">
        <property name="unknownCipherKeyLength" value="$COUGAR-JETTY{jetty.https.unknownCipherKeyLength}"/>
        <property name="geoIPLocator" ref="cougar.core.GeoIPLocator"/>
        <property name="requestTimeResolver" ref="$COUGAR-JETTY{cougar.http.requestTimeResolver}"/>
        <property name="geoLocationDeserializer" ref="$COUGAR-JETTY{cougar.http.geoLocationDeserializerBean}"/>
        <property name="cougarUUIDHeader" value="$COUGAR-JETTY{cougar.http.uuidheader}"/>
    </bean>

</beans>