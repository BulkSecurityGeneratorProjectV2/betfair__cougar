<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="zipkinHttpContextEmitter" class="com.betfair.cougar.modules.zipkin.impl.http.ZipkinHttpContextEmitter">
        <constructor-arg index="0" ref="cougar.client.DefaultHttpContextEmission"/>
    </bean>

    <bean id="zipkinSocketContextEmitter" class="com.betfair.cougar.modules.zipkin.impl.socket.ZipkinSocketContextEmitter">
        <constructor-arg index="0" ref="cougar.client.DefaultSocketContextEmission"/>
    </bean>
</beans>
