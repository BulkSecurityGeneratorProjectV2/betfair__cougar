<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- <import resource="classpath:conf/zipkin-config-jetty-transport.xml" /> -->

    <bean id="zipkinExecutionContextResolverFactory"
          class="com.betfair.cougar.modules.zipkin.impl.ZipkinExecutionContextResolverFactory">
        <property name="cougarUUIDHeader" value="$COUGAR-JETTY{cougar.http.uuidheader}"/>
        <property name="uuidParentsHeader" value="$COUGAR-JETTY{cougar.http.uuidparentsheader}"/>
        <property name="socketServerPort" value="$COUGAR-SOCKET-TRANSPORT{cougar.socket.serverport}"/>
        <property name="zipkinManager" ref="zipkinConfig"/>
    </bean>

    <bean parent="cougar.transport.ContextRegisterer" lazy-init="false">
        <constructor-arg index="1" ref="zipkinExecutionContextResolverFactory"/>
    </bean>

    <bean id="zipkinHttpContextEmitter" class="com.betfair.cougar.modules.zipkin.impl.jetty.ZipkinHttpContextEmitter">
        <constructor-arg index="0" ref="$COUGAR_CLIENT{cougar.client.geoLocationSerializerBean}"/>
        <constructor-arg index="1" value="$COUGAR_CLIENT{cougar.client.http.uuidheader}"/>
        <constructor-arg index="2" value="$COUGAR_CLIENT{cougar.client.http.uuidparentsheader}"/>
        <constructor-arg index="3" ref="cougar.client.DefaultHttpContextEmission"/>
    </bean>

</beans>