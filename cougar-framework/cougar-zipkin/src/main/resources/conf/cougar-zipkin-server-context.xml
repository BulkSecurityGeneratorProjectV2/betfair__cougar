<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="zipkinExecutionContextResolverFactory"
          class="com.betfair.cougar.modules.zipkin.impl.ZipkinExecutionContextResolverFactory">
        <property name="cougarUUIDHeader" value="$COUGAR-JETTY{cougar.http.uuidheader}"/>
        <property name="uuidParentsHeader" value="$COUGAR-JETTY{cougar.http.uuidparentsheader}"/>
        <property name="socketServerPort" value="$COUGAR-SOCKET-TRANSPORT{cougar.socket.serverport}"/>
        <property name="zipkinManager" ref="zipkinManager"/>
    </bean>

    <bean parent="cougar.transport.ContextRegisterer" lazy-init="false">
        <constructor-arg index="1" ref="zipkinExecutionContextResolverFactory"/>
    </bean>
</beans>
