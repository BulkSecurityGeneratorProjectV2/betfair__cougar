<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.betfair.cougar.util.configuration.PropertyConfigurer">
        <constructor-arg index="0" ref="cougar.core.EncryptorRegistry"/>
        <property name="defaultConfig" value="classpath:conf/zipkin-defaults.properties"/>
        <property name="configOverride" value="overrides.properties"/>
        <property name="placeholderPrefix" value="$COUGAR_ZIPKIN{"/>
    </bean>

    <import resource="classpath:conf/cougar-zipkin-common-context.xml"/>
    <import resource="classpath:conf/cougar-zipkin-server-context.xml"/>

</beans>
